    <div id="ticketing"><div class="content-wrapper">
        <div class="title">
            <h2>Tickets</h2>
            <p>Act today to secure your seat</p>
        </div>
        <div class="ticket-types">
          <div class="ticket-type highlight">
            <h3>Patron Ticket</h3>
            <div class="price">
              <span class="currency">HK$</span><span class="amount">900</span>
            </div>
            <div class="check-list">
              <ul>
                <li>Admission on Day 1 and Day 2</li>
                <li>Evening Networking Event</li>
                <li>T-Shirt</li>
              </ul>
            </div>
            <div class="description">
              <p>Sales end on November 4</p>
            </div>
            <div class="action">
              <a class="btn btn-default"
                data-ga-category="front-outbound"
                data-ga-action="click"
                data-ga-label="ticket"
                data-ga-value="patron ticket"
                href="{{ data.site.ticketURL | appendURL | withGA('patron_ticket', 'frontpage_tickets') | execAppend }}"
                target="_blank">Buy Now</a>
            </div>
          </div>
          <div class="separator"></div>

          <div class="ticket-type">
            <h3>Donation Ticket</h3>
            <div class="price">
              <span class="currency">HK$</span><span class="amount">300</span>
            </div>
            <div class="check-list">
              <ul>
                <li>Admission on Day 1 and Day 2</li>
                <li>T-Shirt</li>
              </ul>
            </div>
            <div class="description">
              <p>Sales end on November 4</p>
            </div>
            <div class="action">
              <a class="btn btn-default"
                data-ga-category="front-outbound"
                data-ga-action="click"
                data-ga-label="ticket"
                data-ga-value="donation ticket"
                href="{{ data.site.ticketURL | appendURL | withGA('donation_ticket', 'frontpage_tickets') | execAppend }}"
                target="_blank">Buy Now</a>
            </div>
          </div>
          <div class="separator"></div>

          <div class="ticket-type">
            <h3>Full Ticket</h3>
            <div class="price">
              <span class="amount">Free</span>
            </div>
            <div class="check-list">
              <ul>
                <li>Admission on Day 1 and Day 2</li>
              </ul>
            </div>
            <div class="description">
              <p>Sales end on October 8</p>
            </div>
            <div class="action">
              <a class="btn btn-default"
                data-ga-category="front-outbound"
                data-ga-action="click"
                data-ga-label="ticket"
                data-ga-value="patron ticket"
                href="{{ data.site.ticketURL | appendURL | withGA('full_ticket', 'frontpage_tickets') | execAppend }}"
                target="_blank">Buy Now</a>
            </div>
          </div>
        </div>
      </div>
    </div>

